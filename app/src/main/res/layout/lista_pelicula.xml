<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical"
    tools:context=".crud.multimedia.ListaPelicula">

    <TextView
        android:id="@+id/title_category"
        android:text="@string/menu_lista_pelicula"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/pink"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btnAddNewFilm"
        android:text="@string/btn_new_film"
        android:backgroundTint="@color/blue"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true" />

    <SearchView
        android:id="@+id/buscadorPelicula"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:queryHint="Indica el nombre del producto"
        app:actionViewClass="androix.appcompat.widget.SearchView" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/listaPeliculas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:listitem="@layout/item_pelicula" />

</LinearLayout>