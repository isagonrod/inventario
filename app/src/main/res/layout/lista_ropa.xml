<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical"
    tools:context=".crud.multimedia.ListaDiscoMusica">

    <TextView
        android:id="@+id/title_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/menu_lista_textil"
        android:textAlignment="center"
        android:textColor="@color/pink"
        android:textSize="30sp"
        android:layout_marginBottom="5dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnAddNewTextil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="@color/blue"
        android:clickable="true"
        android:text="@string/btn_new_clothes"
        android:textColor="@color/white" />

    <SearchView
        android:id="@+id/buscadorTextil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:queryHint="Indica el nombre del producto"
        app:actionViewClass="androix.appcompat.widget.SearchView" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/listaRopa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:listitem="@layout/item_ropa" />

</LinearLayout>