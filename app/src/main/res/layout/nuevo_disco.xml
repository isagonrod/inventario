<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical"
    tools:context=".crud.producto.NuevoProducto">

    <TextView
        android:id="@+id/tvDiscTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/oblig_title"
        tools:ignore="SpeakableTextPresentCheck" />

    <EditText
        android:id="@+id/etDiscTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:labelFor="@+id/tvDiscTitle"
        android:textSize="24sp"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/tvDiscArtist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/oblig_artist"
        tools:ignore="SpeakableTextPresentCheck" />

    <AutoCompleteTextView
        android:id="@+id/etDiscArtist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autoSizeTextType="uniform"
        android:completionThreshold="1"
        android:inputType="text"
        android:labelFor="@+id/tvDiscArtist"
        android:textSize="24sp"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/tvDiscYear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/hint_fecha_lanzamiento"
        tools:ignore="SpeakableTextPresentCheck" />

    <EditText
        android:id="@+id/etDiscYear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="4"
        android:inputType="number"
        android:labelFor="@+id/tvDiscYear"
        android:textSize="24sp"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/tvDiscState"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/hint_estado"
        tools:ignore="SpeakableTextPresentCheck"/>

    <AutoCompleteTextView
        android:id="@+id/etDiscState"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autoSizeTextType="uniform"
        android:completionThreshold="1"
        android:inputType="text"
        android:labelFor="@+id/tvDiscArtist"
        android:textSize="24sp"
        tools:ignore="SpeakableTextPresentCheck" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:gravity="center">

        <Button
            android:id="@+id/btnGuardar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/save"
            android:clickable="true"
            tools:ignore="SpeakableTextPresentCheck" />

        <Button
            android:id="@+id/fabEditar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/edit"
            android:clickable="true"
            tools:ignore="SpeakableTextPresentCheck" />

        <Button
            android:id="@+id/fabEliminar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/delete"
            android:clickable="true"
            tools:ignore="SpeakableTextPresentCheck" />

    </LinearLayout>

</LinearLayout>